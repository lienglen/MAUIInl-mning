<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIInlämning.Views.DetailsPage"
             xmlns:Models="clr-namespace:MAUIInlämning.Models"
             Title="DetailsPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" x:DataType="Models:Book">

            <Image Source="{Binding ImageUrl}" 
               HeightRequest="300" 
               Aspect="AspectFit"
               HorizontalOptions="Center"
               BackgroundColor="LightGray">
                <Image.Shadow>
                    <Shadow Brush="Black" Offset="5,5" Radius="10" Opacity="0.2" />
                </Image.Shadow>
            </Image>

            <Label Text="{Binding Title}" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalTextAlignment="Center" />

            <Label Text="{Binding Author}" 
               FontSize="18" 
               TextColor="DimGray" 
               HorizontalTextAlignment="Center" />

            <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="Fill" />

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Label Text="{Binding Genre, StringFormat='Genre: {0}'}" FontSize="14" />
                <Label Text="{Binding YearPublished, StringFormat='År: {0}'}" FontSize="14" />
            </HorizontalStackLayout>

            <Label Text="Beskrivning" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label Text="{Binding Description}" 
               FontSize="16" 
               LineBreakMode="WordWrap" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>